{
  "name": "uiengine",
  "version": "0.8.1",
  "description": "A pattern library generator that gets out of your way.",
  "author": "Dennis Reimann",
  "license": "MIT",
  "main": "./lib/uiengine.js",
  "homepage": "https://github.com/dennisreimann/uiengine",
  "bugs": "https://github.com/dennisreimann/uiengine/issues",
  "engines": {
    "node": ">=6.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dennisreimann/uiengine.git"
  },
  "bin": {
    "uiengine": "./bin/uiengine.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "keywords": [
    "uiengine",
    "uiengineering",
    "pattern-library",
    "style-guide",
    "static-site"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prestart": "yarn run clean",
    "prebuild": "yarn run clean",
    "prerelease": "yarn run clean",
    "start": "yarn run build -- -w & yarn run test -- -w",
    "build": "babel src --out-dir lib",
    "test:setup": "cd test/project && yarn install && cd -",
    "test": "mocha --compilers js:babel-register -R dot",
    "cover": "nyc yarn run test",
    "ci": "yarn run test:setup && yarn run cover && nyc report --reporter=text-lcov | coveralls",
    "lint": "standard",
    "release": "yarn run lint && yarn run cover && yarn run build"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "deep-extend": "^0.4.1",
    "fs-extra": "^2.0.0",
    "globby": "^6.1.0",
    "js-yaml": "^3.7.0",
    "markdown-it": "^8.2.2",
    "markdown-it-anchor": "^4.0.0",
    "ramda": "^0.23.0",
    "uiengine-theme-default": "^0.8.1",
    "yargs": "^7.1.0"
  },
  "optionalDependencies": {
    "browser-sync": "^2.18.8",
    "chokidar": "^1.6.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.23.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "run-sequence": "^1.2.2",
    "standard": "^10.0.2",
    "uiengine-test-project": "file:test/project"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "/lib",
      "/theme/assets"
    ]
  }
}
