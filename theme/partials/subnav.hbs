<div class="hakuin-subnav">
  {{#each navigation.subitems}}
    {{#if active}}
      <div class="hakuin-subnav__item hakuin-subnav__item--active">
    {{else}}
      <div class="hakuin-subnav__item">
    {{/if}}
      <a href="{{absoluteUrl path ../page.path}}" class="hakuin-subnav__link">{{title}}</a>
      {{#if (hasContent children) }}
        <div class="hakuin-flyout-container">
          {{> flyout pagePath=../page.path}}
        </div>
      {{/if}}
    </div>
  {{/each}}
</div>
