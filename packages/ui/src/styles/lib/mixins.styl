icon-size($size)
  width $size
  height $size

icon-position($top = null, $left = null)
  if $top || $left
    position relative
  if $top
    top $top
  if $left
    left $left

link-with-hover($color-base, $color-hover, $underline = true)
  color $color-base
  transition-duration var(--uie-transition-duration-fast)

  if $underline
    text-decoration underline
  else
    text-decoration none

  &:hover
    text-decoration underline
    color $color-hover

    .icon
      fill $color-hover

  .icon
    transition-duration var(--uie-transition-duration-fast)
    fill $color-base

modal-option()
  display block
  width 100%
  padding var(--uie-space-s) var(--uie-space-m)
  cursor pointer
  color var(--uie-color-modal-text)
  background var(--uie-color-modal-bg)
  font-size var(--uie-font-size-s)
  font-family var(--uie-font-family-light)
  text-decoration none
  white-space nowrap

  .icon
    margin-top -6px
    margin-right var(--uie-space-s)
    fill var(--uie-color-modal-text)
    icon-size(21px)
    icon-position(6px)

  &:focus,
  &:hover,
  &:active
    color var(--uie-color-modal-text-hover)
    background var(--uie-color-modal-bg-hover)

    .icon
      fill var(--uie-color-modal-text-hover)

code()
  font-family var(--uie-font-family-code)
  font-size var(--uie-font-size-s)
  white-space pre

code-block()
  code()
  overflow-x auto
  // defaults, will be overriden by hljs
  color var(--uie-color-code-text)
  background-color var(--uie-color-code-bg)
  // use important to override hljs styling which differs per theme
  padding var(--uie-space-m) !important

code-inline()
  code()
  padding var(--uie-space-xxs) var(--uie-space-xs)
  border-radius var(--uie-space-xs)
  background-color var(--uie-color-bg-light)
