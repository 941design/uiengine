@require "settings"

@font-face
  font-family "UIE Merriweathersans bold"
  src url(../fonts/merriweathersans-bold.woff2) format("woff2"),
      url(../fonts/merriweathersans-bold.woff) format("woff")
  font-display optional

@font-face
  font-family "UIE Merriweathersans light"
  src url(../fonts/merriweathersans-light.woff2) format("woff2"),
      url(../fonts/merriweathersans-light.woff) format("woff")
  font-display optional

@font-face
  font-family "UIE Merriweathersans regular"
  src url(../fonts/merriweathersans-regular.woff2) format("woff2"),
      url(../fonts/merriweathersans-regular.woff) format("woff")
  font-display optional

@font-face
  font-family "UIE Merriweathersans bolditalic"
  src url(../fonts/merriweathersans-bolditalic.woff2) format("woff2"),
      url(../fonts/merriweathersans-bolditalic.woff) format("woff")
  font-display optional

@font-face
  font-family "UIE Merriweathersans lightitalic"
  src url(../fonts/merriweathersans-lightitalic.woff2) format("woff2"),
      url(../fonts/merriweathersans-lightitalic.woff) format("woff")
  font-display optional

@require "elements"

.uie-html-sketchapp-export
  padding 20px

  &__section + &__section
    margin-top var(--space-xxl)

  &__article + &__article
    margin-top var(--space-xl)

.uie-tokens
  &__category + &__category
    margin-top var(--space-xxl)

  &__title
    margin-bottom var(--space-m)
    font-family var(--font-family-regular)
    font-size var(--font-size-m)

  &__container
    &--color
      display flex
      flex-wrap wrap

.uie-token
  &__color
    width 100%
    height 40px

.uie-color-token
  flex 0 0 22.5rem
  margin-bottom var(--space-xl)
  padding-right var(--space-xxl)

  &__swatch
    display inline-block
    width 4.5rem
    height 4.5rem
    border-radius 50%
    border-bottom-right-radius 0
    border 1px solid var(--color-secondary-text)
    padding 2px

    &__inner
      width 100%
      height 100%
      border-radius 50%
      border-bottom-right-radius 0

  &__info
    display flex

    &--top
      align-items flex-end
      margin-bottom var(--space-m)

  &__info + &__info
    margin-top var(--space-xs)

  &__label,
  &__example
    flex 0 0 5.75rem
    padding-right var(--space-m)
    text-align right

  &__name
    flex 1
    font-family var(--font-family-regular)

  &__label
    padding-top calc(var(--font-size-s) - var(--font-size-xs))
    color var(--color-secondary-text)
    font-family var(--font-family-light)
    font-size var(--font-size-xs)

  &__value
    flex 1
    font-size var(--font-size-s)

    &--code
      font-family var(--font-family-code)

.uie-font-token
  + .uie-font-token
    margin-top var(--space-xl)

  &__info
    display flex

    &--top
      align-items flex-end
      margin-bottom var(--space-m)

    &--example
      margin-bottom var(--space-m)

  &__info + &__info
    margin-top var(--space-xs)

  &__label
    flex 0 0 5.75rem
    text-align right
    padding-top calc(var(--font-size-s) - var(--font-size-xs))
    padding-right var(--space-m)
    color var(--color-secondary-text)
    font-family var(--font-family-light)
    font-size var(--font-size-xs)

  &__value
    flex 1
    font-size var(--font-size-s)

    &--code
      font-family var(--font-family-code)

.uie-icon-token,
.uie-default-token
  &__value
    &--value,
    &--variable
      font-family var(--font-family-code)
