{
  "name": "uiengine",
  "version": "0.1.0",
  "description": "A pattern library generator that gets out of your way.",
  "author": "Dennis Reimann",
  "license": "UNLICENSED",
  "main": "./lib/uiengine.js",
  "files": [
    "bin",
    "lib",
    "sample_project",
    "theme"
  ],
  "engines": {
    "node": ">=7.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dennisreimann/uiengine.git"
  },
  "bin": {
    "uiengine": "./bin/uiengine.js"
  },
  "scripts": {
    "clean": "rimraf theme/assets sample_project/dist",
    "start": "yarn run clean && node --harmony `which gulp` develop",
    "build": "yarn run clean && node --harmony `which gulp` build",
    "production": "yarn run clean && node --harmony `which gulp` production",
    "pretest": "standard",
    "test": "mocha --harmony -R dot"
  },
  "dependencies": {
    "deep-extend": "^0.4.1",
    "fastmatter": "^1.1.1",
    "fs-extra": "^2.0.0",
    "globby": "^6.1.0",
    "js-yaml": "^3.7.0",
    "markdown-it": "^8.2.2",
    "markdown-it-anchor": "^2.6.0",
    "pug": "^2.0.0-beta10",
    "ramda": "^0.23.0",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.7",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.3.0",
    "gulp-rev-all": "0.8.23",
    "gulp-rev-delete-original": "^0.2.2",
    "gulp-stylus": "^2.6.0",
    "gulp-uglify": "^2.0.1",
    "gulp-util": "^3.0.8",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "run-sequence": "^1.2.2",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "/theme/assets"
    ]
  }
