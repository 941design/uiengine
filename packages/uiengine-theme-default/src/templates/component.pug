extends includes/layout.pug

include /component/component.pug
include /pageheader/pageheader.pug
include /variant/variant.pug

block main
  if config.breakpoints
    script
      | window.UIengine.breakpoints = !{JSON.stringify(config.breakpoints)};
    style
      each width, breakpoint in config.breakpoints
        | .variantpreview__container[data-breakpoint='#{breakpoint}'] { width: #{width}px; }

  +component(page)
