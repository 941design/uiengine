extends includes/layout.pug

include /pageheader/pageheader.pug
include /sitemap/sitemap.pug

block main
  section.page(id=h.dasherize(page.id))
    +pageheader(page, navigation)

    if page.content
      article.content.wrap
        !=page.content

    article.content.wrap
      h2= h.t('sitemap.label')
      +sitemap()
