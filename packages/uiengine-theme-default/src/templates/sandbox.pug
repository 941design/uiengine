extends includes/layout.pug

include /pageheader/pageheader.pug
include /pagenav/pagenav.pug

block main
  - const itemIds = navigation[page.id].childIds
  section.page(id=h.dasherize(page.id))
    +pageheader(page, navigation)

    if page.content
      article.content.wrap
        !=page.content

    for itemId in itemIds
      - const page = pages[itemId]
      - const item = navigation[page.id]
      - const itemIds = navigation[page.id].childIds
      article.content.wrap
        h4
          a(class="pagenav__link" href=h.pageLink(item))= item.title
        if page.content
          != page.content
        if itemIds
          +pagenav(itemIds, navigation)
