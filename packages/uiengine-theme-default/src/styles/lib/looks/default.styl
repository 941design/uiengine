$color-neutral-20 = #CCC

// navigation 
$color-main-nav-bg = #333
$color-main-nav-bg-active = #FFF
$color-main-nav-text = #FFF
$color-main-nav-text-active = #333
$color-main-nav-text-config = #777
$color-main-nav-border = transparent
$color-main-nav-border-active = #FFF

// page header
$color-page-head-bg = #666
$color-page-head-text = #FFF
$color-page-head-link = #7DF
$color-page-head-link-active = #FFF
$color-page-head-meta = #CCC

// page nav
$color-page-nav-link = #999
$color-page-nav-link-hover = darken($color-page-head-link, 15)

// variation header
$color-variation-head-bg = $color-page-head-bg
$color-variation-head-text = $color-page-head-text
$color-variation-head-link = $color-page-head-link
$color-variation-head-link-active = $color-page-head-link-active
$color-variation-head-meta = $color-page-head-meta

// main
$color-main-bg = #FFF
$color-main-text = #222
$color-main-link = darken($color-page-head-link, 15)

// code & data
$color-code-bg = #222
$color-code-text = #EEE
$color-code-link = $color-page-nav-link
$color-code-link-hover = $color-main-link
$color-data-bg = #222
$color-data-text = #EEE
