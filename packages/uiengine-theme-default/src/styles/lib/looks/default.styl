$color-neutral-20 = #CCC

// navigation 
$color-navigation-bg = #333
$color-navigation-bg-current = $color-white
$color-navigation-text = $color-white
$color-navigation-text-hover = #333
$color-navigation-text-current = #333
$color-navigation-text-meta = #777

// page header
$color-pagehead-bg = #666
$color-pagehead-text = $color-white
$color-pagehead-link = #7DF
$color-pagehead-link-hover = #7DF
$color-pagehead-meta = #CCC

// page links
$color-pagenav-link = #999
$color-pagenav-link-hover = darken($color-pagehead-link, 15)

// variation header
$color-variationhead-bg = $color-pagehead-bg
$color-variationhead-text = $color-pagehead-text
$color-variationhead-link = $color-pagehead-link
$color-variationhead-link-hover = $color-pagehead-link
$color-variationhead-link-current = $color-white
$color-variationhead-meta = $color-pagehead-meta

// variation links
$color-variationnav-link = $color-pagenav-link
$color-variationnav-link-hover = $color-pagenav-link-hover

// main
$color-main-bg = $color-white
$color-main-text = #222
$color-main-link = darken($color-pagehead-link, 15)
$color-main-link-hover = darken($color-pagehead-link, 10)

// code & data
$color-code-bg = #222
$color-code-text = #EEE
$color-code-link = $color-pagenav-link
$color-code-link-hover = $color-main-link
$color-data-bg = #222
$color-data-text = #EEE
