$icon-size-original = 24px

$transition-duration-fast = .15s
$transition-duration-medium = .25s

// converts fonts defined in json file to variables:
json(pathjoin('..', 'tokens', 'fonts.json'), null, '$font-')

$font-family-fallback = 'Helvetica', Arial, Tahoma, Verdana, sans-serif
$font-family-code = 'Fira Code', Hasklig, 'Source Code Pro', 'DejaVu Sans Mono', Hack, Meslo, Menlo, Inconsolata, Consolas, 'Liberation Mono', Courier, monospace
$font-family-bold = $font-merriweathersans-bold, $font-family-fallback
$font-family-light = $font-merriweathersans-light, $font-family-fallback
$font-family-regular = $font-merriweathersans-regular, $font-family-fallback
$font-family-bolditalic = $font-merriweathersans-bolditalic, $font-family-fallback
$font-family-lightitalic = $font-merriweathersans-lightitalic, $font-family-fallback

// converts breakpoints defined in json file to variables:
// { "S": 320 } -> $breakpoint-S = 320
json(pathjoin('..', 'tokens', 'breakpoints.json'), null, '$breakpoint-')

$breakpoint-s = unit($breakpoint-S, 'px')
$breakpoint-m = unit($breakpoint-M, 'px')
$breakpoint-l = unit($breakpoint-L, 'px')
$breakpoint-xl = unit($breakpoint-XL, 'px')

// more colors are configured via skins
json(pathjoin('..', 'tokens', 'colors.json'), null, '$color-')

json(pathjoin('..', 'tokens', 'spaces.json'), null, '$space-')

json(pathjoin('..', 'tokens', 'fontsizes.json'), null, '$font-size-')
