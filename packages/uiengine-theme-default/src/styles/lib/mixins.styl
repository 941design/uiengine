icon-size($size)
  width $size
  height $size

icon-color($fill)
  fill $fill

icon-position($top = null, $left = null)
  if $top || $left
    position relative
  if $top
    top $top
  if $left
    left $left

markdown-container()
  a:not([class])
    color $color-main-link

    &:hover
      color $color-main-link-hover

  p:not([class])
    margin-bottom $space-normal

  ul:not([class])
  ol:not([class])
    margin-bottom $space-normal
    margin-left $space-medium

  > :last-child
    margin-bottom 0 !important
