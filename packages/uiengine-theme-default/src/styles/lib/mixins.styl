icon-size($size)
  width $size
  height $size

icon-color($fill)
  fill $fill

icon-position($top = null, $left = null)
  if $top || $left
    position relative
  if $top
    top $top
  if $left
    left $left

link-with-hover($color-base, $color-hover, $animate-underline = true)
  $transition = .2s
  text-decoration none
  color $color-base
  transition $transition

  &:hover
    color $color-hover

    .icon
      icon-color($color-hover)

  .icon
    transition $transition
    icon-color($color-base)

  if $animate-underline
    position relative

    &:after
      content ''
      position absolute
      bottom 0
      left 0
      width 0%
      border-bottom 1px solid $color-base
      transition $transition

    &:hover:after
      width 100%
      border-bottom 1px solid $color-hover
