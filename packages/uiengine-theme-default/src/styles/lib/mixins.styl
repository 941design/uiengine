icon-size($factor = 1)
  $size = $icon-size-original * $factor
  width $size
  height $size

icon-position($top = null, $left = null)
  if $top || $left
    position relative
  if $top
    top $top
  if $left
    left $left

link-with-hover($color-base, $color-hover, $animate-underline = true)
  $transition-duration = $transition-duration-fast
  color $color-base
  transition-duration $transition-duration
  text-decoration none

  &:hover
    color $color-hover

    .icon
      fill $color-hover

  .icon
    transition-duration $transition-duration
    fill $color-base

  if $animate-underline
    position relative

    &:after
      content ''
      position absolute
      bottom 0
      left 0
      width 0%
      border-bottom 1px solid $color-base
      transition-duration $transition-duration

    &:hover:after
      width 100%
      border-bottom 1px solid $color-hover

modal-option()
  display block
  width 100%
  padding $space-s $space-m
  cursor pointer
  color $color-modal-text
  background $color-modal-bg
  font-size $font-size-s
  font-family $font-family-light
  text-decoration none

  .icon
    margin-top -6px
    margin-right $space-s
    fill $color-modal-text
    icon-size(.875)
    icon-position(6px)

  &:hover
    color $color-modal-text-hover
    background $color-modal-bg-hover

    .icon
      fill $color-modal-text-hover

code()
  font-family $font-family-code
  font-size $font-size-s
  white-space pre

code-block()
  code()
  overflow-x auto
  // defaults, will be overriden by hljs
  color $color-code-text
  background-color $color-code-bg
  // use important to override hljs styling which differs per theme
  padding $space-m !important

code-inline()
  code()
  padding $space-xxs $space-xs
  border-radius $space-xs
  background-color $color-bg-light
