icon-size($factor = 1)
  $size = 24px * $factor
  width $size
  height $size

icon-position($top = null, $left = null)
  if $top || $left
    position relative
  if $top
    top $top
  if $left
    left $left

link-with-hover($color-base, $color-hover, $animate-underline = true)
  color $color-base
  transition-duration var(--transition-duration-fast)
  text-decoration none

  &:focus,
  &:hover,
  &:active
    color $color-hover

    .icon
      fill $color-hover

  .icon
    transition-duration var(--transition-duration-fast)
    fill $color-base

  if $animate-underline
    position relative

    &:after
      content ''
      position absolute
      bottom 0
      left 0
      width 0%
      border-bottom 1px solid $color-base
      transition-duration var(--transition-duration-fast)

    &:focus,
    &:hover,
    &:active
      &:after
        width 100%
        border-bottom 1px solid $color-hover

modal-option()
  display block
  width 100%
  padding var(--space-s) var(--space-m)
  cursor pointer
  color var(--color-modal-text)
  background var(--color-modal-bg)
  font-size var(--font-size-s)
  font-family var(--font-family-light)
  text-decoration none

  .icon
    margin-top -6px
    margin-right var(--space-s)
    fill var(--color-modal-text)
    icon-size(.875)
    icon-position(6px)

  &:focus,
  &:hover,
  &:active
    color var(--color-modal-text-hover)
    background var(--color-modal-bg-hover)

    .icon
      fill var(--color-modal-text-hover)

code()
  font-family var(--font-family-code)
  font-size var(--font-size-s)
  white-space pre

code-block()
  code()
  overflow-x auto
  // defaults, will be overriden by hljs
  color var(--color-code-text)
  background-color var(--color-code-bg)
  // use important to override hljs styling which differs per theme
  padding var(--space-m) !important

code-inline()
  code()
  padding var(--space-xxs) var(--space-xs)
  border-radius var(--space-xs)
  background-color var(--color-bg-light)
