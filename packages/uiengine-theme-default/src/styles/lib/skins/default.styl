// navigation
$color-navigation-bg = $color-neutral-80
$color-navigation-bg-current = $color-white
$color-navigation-text = $color-white
$color-navigation-text-hover = $color-neutral-80
$color-navigation-text-current = $color-neutral-80
$color-navigation-text-meta = #777

// page header
$color-pagehead-bg = #555
$color-pagehead-text = $color-white
$color-pagehead-link = #7DF
$color-pagehead-link-hover = #7DF
$color-pagehead-meta = #CCC

// page links
$color-pagenav-link = #999
$color-pagenav-link-hover = darken($color-pagehead-link, 15)

// main
$color-main-bg = $color-white
$color-main-text = $color-neutral-90
$color-main-link = darken($color-pagehead-link, 15)
$color-main-link-hover = darken($color-pagehead-link, 10)

// variant header
$color-varianthead-bg = #888
$color-varianthead-text = $color-pagehead-text
$color-varianthead-link = $color-pagehead-link
$color-varianthead-link-hover = $color-pagehead-link
$color-varianthead-link-current = $color-white
$color-varianthead-meta = $color-pagehead-meta
$color-varianthead-label-bg = alpha(#555, .5)
$color-varianthead-label-text = $color-white
$color-varianthead-button-bg = alpha(#555, .5)
$color-varianthead-button-bg-hover = alpha(#555, .5)
$color-varianthead-button-text = $color-white
$color-varianthead-button-text-hover = $color-white

// variant links
$color-variantaction-link = $color-pagenav-link
$color-variantaction-link-hover = $color-pagenav-link-hover

// schema
$color-schema-permalink = $color-neutral-50
$color-schema-permalink-hover = $color-neutral-50
$color-schemahead-text = $color-neutral-50
$color-schemahead-border = $color-neutral-50
$color-schemabody-text = $color-main-text
$color-schemabody-border = $color-neutral-10

// modals
$color-modal-border = $color-neutral-20
$color-modal-bg = alpha($color-white, .925)
$color-modal-bg-hover = alpha($color-neutral-20, .925)
$color-modal-text = $color-neutral-20
$color-modal-text-hover = $color-white

// code & data
$color-code-bg = $color-neutral-90
$color-code-text = $color-neutral-10
$color-code-header = $color-pagenav-link
$color-code-header-hover = $color-main-link
