$color-neutral-20 = #CCC

// navigation
$color-navigation-bg = darken(#31475C, 15)
$color-navigation-bg-current = $color-white
$color-navigation-text = $color-white
$color-navigation-text-hover = #331833
$color-navigation-text-current = #331833
$color-navigation-text-meta = #999

// page header
$color-pagehead-bg = #31475C
$color-pagehead-text = $color-white
$color-pagehead-link = #FFDD97
$color-pagehead-link-hover = #FFDD97
$color-pagehead-meta = #FFDD97

// page links
$color-pagenav-link = lighten(#31475C, 15)
$color-pagenav-link-hover = #68B4C8

// variation header
$color-variationhead-bg = #68B4C8
$color-variationhead-text = $color-pagehead-text
$color-variationhead-link = $color-pagehead-link
$color-variationhead-link-hover = $color-white
$color-variationhead-link-current = $color-white
$color-variationhead-meta = #FFDD97

// variation links
$color-variationnav-link = $color-pagenav-link
$color-variationnav-link-hover = $color-pagenav-link-hover

// main
$color-main-bg = $color-white
$color-main-text = #222
$color-main-link = $color-pagenav-link
$color-main-link-hover = $color-pagenav-link-hover

// code & data
$color-code-bg = #222
$color-code-text = #EEE
$color-code-header = #666
$color-code-header-hover = $color-main-link-hover
