*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box
  vertical-align baseline

html
  line-height 1.5
  font-family $font-family-base
  @media print
    font-size 10pt
  @media $mq-up_to_s
    font-size 13px
  @media $mq-s_to_m
    font-size 14px
  @media $mq-m_to_l
    font-size 15px
  @media $mq-l_and_up
    font-size 16px

body
  color $color-main-text
  background-color $color-main-bg

h1
h2
h3
  font-family $font-family-bold
  font-weight 400

h4
h5
h6
  font-family $font-family-base
  font-weight 400

p
ul
ol
table
article
section
  +
    h2
      margin-top $space-large
  +
    h3
    h4
    h5
    h6
      margin-top $space-normal

section
  margin-bottom $space-huge

article
  margin-top $space-large
  margin-bottom $space-medium

.wrap
  margin-left auto
  margin-right auto
  padding-left $space-large
  padding-right $space-large
  max-width 55rem

  &--wide
    max-width 75rem

.content
  h1
  h2
  h3
  h4
  h5
  h6
    &:not([class])
      margin-bottom $space-tiny

  a:not([class])
    link-with-hover($color-main-link, $color-main-link-hover)

  p:not([class])
    margin-bottom $space-normal

  img:not([class])
    border 8px solid #ddd
    max-width 100%

  ul:not([class])
  ol:not([class])
    margin-bottom $space-normal
    margin-left $space-medium

  table:not([class])
    margin-top $space-normal
    margin-bottom $space-large

  > :last-child
    margin-bottom 0 !important
