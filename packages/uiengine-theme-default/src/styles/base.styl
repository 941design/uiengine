*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box
  vertical-align baseline

html
  line-height 1.5
  font-family $font-family-base
  @media print
    font-size 10pt
  @media up_to_S
    font-size 14px
  @media S_to_M
    font-size 15px
  @media M_and_up
    font-size 16px

body
  color $color-text
  background-color $color-white

h1
h2
h3
  font-weight 400

h4
h5
h6
  font-weight 400


p
ul
ol
article
section
  +
    h2
      margin-top $space-large
  +
    h3
    h4
    h5
    h6
      margin-top $space-medium

.wrap
  margin 0 auto
  padding-left $space-large
  padding-right $space-large

  &--large
    max-width 75rem

  &--content
    max-width 55rem


.page
  &__content
    padding-top $space-large
    padding-bottom $space-large


