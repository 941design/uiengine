:root
  // fonts
  --font-family-fallback 'Helvetica', Arial, Tahoma, Verdana, sans-serif
  --font-family-code 'Fira Code', Hasklig, 'Source Code Pro', 'DejaVu Sans Mono', Hack, Meslo, Menlo, Inconsolata, Consolas, 'Liberation Mono', Courier, monospace
  --font-family-bold 'Merriweathersans bold', var(--font-family-fallback)
  --font-family-light 'Merriweathersans light', var(--font-family-fallback)
  --font-family-regular 'Merriweathersans regular', var(--font-family-fallback)
  --font-family-bolditalic 'Merriweathersans bolditalic', var(--font-family-fallback)
  --font-family-lightitalic 'Merriweathersans lightitalic', var(--font-family-fallback)

  --font-size-xs .75rem
  --font-size-s .875rem
  --font-size-m 1rem
  --font-size-l 1.125rem
  --font-size-xl 1.5rem

  // spaces
  --space-xxs .125rem
  --space-xs .25rem
  --space-s .5rem
  --space-m .75rem
  --space-l 1.125rem
  --space-xl 1.5rem
  --space-xxl 2.5rem

  // transitions
  --transition-duration-fast .15s
  --transition-duration-medium .25s

  // colors
  --color-white #FFF
  --color-neutral-10 #EEE
  --color-neutral-20 #CCC
  --color-neutral-50 #AAA
  --color-neutral-60 #999
  --color-neutral-70 #555
  --color-neutral-80 #333
  --color-neutral-90 #222
  --color-black #000

  --color-accent-light #68B4C8
  --color-accent-medium #3F5C76
  --color-accent-middark #344554
  --color-accent-dark #243646

  --color-border-light var(--color-neutral-10)
  --color-border-medium var(--color-neutral-20)

  --color-bg-light var(--color-neutral-10)
  --color-bg-medium var(--color-neutral-20)

  --color-navigation-bg var(--color-accent-dark)
  --color-navigation-text var(--color-white)
  --color-navigation-bg-subnav var(--color-accent-middark)
  --color-navigation-text-subnav var(--color-navigation-text)
  --color-navigation-bg-current var(--color-white)
  --color-navigation-text-current var(--color-accent-dark)
  --color-navigation-border-current var(--color-accent-light)

  --color-contentheader-link var(--color-accent-light)
  --color-contentheader-link-hover var(--color-accent-medium)
  --color-contentheader-link-current var(--color-accent-dark)
  --color-contentheader-label-bg var(--color-accent-medium)
  --color-contentheader-label-text var(--color-white)

  --color-main-bg var(--color-white)
  --color-main-text var(--color-neutral-90)
  --color-main-link var(--color-accent-light)
  --color-main-link-hover var(--color-accent-medium)
  --color-secondary-text var(--color-neutral-50)

  --color-modal-bg var(--color-white)
  --color-modal-bg-hover var(--color-bg-light)
  --color-modal-text var(--color-secondary-text)
  --color-modal-text-hover var(--color-secondary-text)
  --color-modal-border-outer var(--color-border-medium)
  --color-modal-border-inner var(--color-border-light)

  --color-code-bg var(--color-accent-dark)
  --color-code-text var(--color-neutral-10)
  --color-code-header var(--color-accent-light)
  --color-code-header-hover var(--color-accent-medium)
  --color-code-header-current var(--color-accent-dark)

  --color-footer-text var(--color-secondary-text)
  --color-footer-bg var(--color-bg-light)
