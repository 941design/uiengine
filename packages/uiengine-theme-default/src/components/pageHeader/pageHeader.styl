.page-header
  color $color-pagehead-text
  background-color $color-pagehead-bg
  padding-top $space-large
  padding-bottom $space-medium

  &__parent-link
    text-decoration none
    font-size $font-size-tiny
    color $color-pagehead-link

    &:hover
      color $color-pagehead-link-hover

    &:before
      content "< "
      margin-left -1.5ch

  &__title
    font-size 1.5rem
