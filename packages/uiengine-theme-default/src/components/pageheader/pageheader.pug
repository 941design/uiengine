include /icon/icon.pug

mixin pageheader(page, navigation)
  header.pageheader&attributes(attributes)
    .pageheader__inner.wrap
      - const navItem = navigation[page.id]
      - const parentItem = navigation[navItem.parentId]
      if parentItem
        a.pageheader__parentlink(href=h.pageLink(parentItem))
          +icon('caret-left-double')
          = parentItem.title
      h1.pageheader__title= page.title
      block
