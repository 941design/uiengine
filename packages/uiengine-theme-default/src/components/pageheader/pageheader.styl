.pageheader
  color $color-pagehead-text
  background-color $color-pagehead-bg
  padding-top $space-large
  padding-bottom $space-medium

  &__parent-link
    text-decoration none
    font-size $font-size-tiny
    color $color-pagehead-link

    .icon
      margin-left $space-normal * -1
      icon-size(16px)
      icon-color($color-pagehead-link)
      icon-position(.38em)

    &:hover
      color $color-pagehead-link-hover

      .icon
        icon-color($color-pagehead-link-hover)

  &__title
    font-family $font-family-bold
    font-size $font-size-large
