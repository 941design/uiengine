.variationheader
  color $color-variationhead-text
  background-color $color-variationhead-bg
  padding-top $space-medium
  position relative

  .wrap
    display flex
    flex-wrap wrap
    align-items last baseline

  &__meta
    margin-top $space-tiny
    color $color-variationhead-meta
    @media $mq-up_to_m
      font-size $font-size-small
    @media $mq-m_and_up
      font-size $font-size-tiny
    @media $mq-up_to_xl
      flex-basis 100%
    @media $mq-xl_and_up
      text-align right
      width 8rem
      margin-left -8rem
      padding-right $space-large

  &__naming
  &__status
    @media $mq-xl_and_up
      display block

  &__naming + &__status
    @media $mq-up_to_xl
      margin-left $space-small

  &__status
    color $color-variationhead-text

  &__label
    position absolute
    right 4.25rem
    bottom .9rem
    padding $space-tiny $space-small
    border 1px solid $color-variationhead-label-text
    border-radius $space-normal
    border-bottom-right-radius 0
    color $color-variationhead-label-text
    background $color-variationhead-label-bg
    font-size $font-size-base

  &__title
    font-family $font-family-bold
    font-size $font-size-large
    padding-bottom $space-medium

  &__links
    @media $mq-up_to_m
      flex-basis 100%
      font-size $font-size-subhead
    @media $mq-m_and_up
      font-size $font-size-large
      margin-left $space-large
      padding-left $space-large

      &:before
        content ""
        position relative
        left $space-large * -1
        border-left 1px solid $color-variationhead-meta

  &__link
    display inline-block
    padding-bottom $space-medium
    color $color-variationhead-link
    text-decoration none
    transition-property color
    transition-duration .2s

    &:hover
      color $color-variationhead-link-hover

    &--active
      color $color-variationhead-link-current
      background-image url(../svgs/triangle.svg)
      background-position 50% 100%
      background-repeat no-repeat
      background-size 1.25rem

  &__link + &__link
    margin-left $space-large

  &__actions
    position absolute
    right $space-large
    bottom .9rem

  &__actiontoggle
    width 2.1rem
    height 2.1rem
    border 1px solid $color-variationhead-label-text
    border-radius 50%
    transition .2s
    cursor pointer
    color $color-variationhead-button-text
    background $color-variationhead-button-bg

    &:hover
      color $color-variationhead-button-text-hover
      background $color-variationhead-button-bg-hover

      .icon
        icon-color($color-variationhead-button-text-hover)

    .icon
      transition .2s
      icon-color($color-variationhead-button-text)
      icon-position(.2em)

  &__actionlist
    display none
    width 280px
    position absolute
    z-index 10
    top 3rem
    right 0
    list-style none
    border 1px solid $color-modal-border
    border-top none

    &--active
      display block

    &:after
      content ''
      position absolute
      top -1.25rem
      right .35rem
      width 1.25rem
      height 1.25rem
      background-image url(../svgs/triangle.svg)
      background-position 50% 100%
      background-repeat no-repeat
      background-size 1.25rem

  &__actionlink
    display block
    width 100%
    font-size $font-size-small
    font-family $font-family-base
    color $color-modal-text
    background $color-modal-bg
    padding-top $space-small
    padding-bottom $space-normal
    padding-left $space-normal
    padding-right $space-normal
    text-decoration none
    
    .icon
      margin-right $space-small
      icon-position(4px)
      icon-size(1.25rem)
      icon-color($color-modal-text)

    &:hover
      color $color-modal-text-hover
      background $color-modal-bg-hover

      .icon
        icon-color($color-modal-text-hover)

  &__actionlink + &__actionlink
    border-top 1px solid $color-modal-border

