.contentsection
  display none
  &--active
    display block

.content
  max-width 55rem

  // remove bottom margin of last item, because the container cares for the spacing
  > :last-child
    margin-bottom 0 !important

  // markdown element styles, mostly spacings
  a:not([class])
    link-with-hover($color-main-link, $color-main-link-hover)

  p:not([class])
    margin-bottom $space-m

  img:not([class])
    max-width 100%

  ol:not([class]),
  ul:not([class])
    margin-left $space-l
    margin-bottom $space-m

  li:not([class]) + li:not([class])
    margin-top $space-xs

  table:not([class])
    margin-top $space-m
    margin-bottom $space-xl

    td:not([class])
      > :last-child
        margin-bottom 0
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    &:not([class])
      margin-bottom $space-xs

  p
  ul
  ol
  table
    &:not([class])
      +
        h2
          &:not([class])
            margin-top $space-xl
      +
        h3
        h4
        h5
        h6
          &:not([class])
            margin-top $space-m
