.contentheader
  position relative
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-end
  border-bottom 1px solid $color-border-light

  &__label
    padding $space-xs $space-s
    border-radius $space-m
    border-bottom-right-radius 0
    color $color-contentheader-label-text
    background $color-contentheader-label-bg
    margin-bottom $space-s
    margin-right $space-s
    font-size $font-size-s

  &__title
    margin-right $space-l
    margin-bottom $space-s
    flex 1

  &__options
    display flex
    align-items flex-end
    margin-bottom $space-s
    font-size $font-size-s

  &__option
    display inline-block
    color $color-contentheader-link
    text-decoration none
    transition-property color
    transition-duration $transition-duration-fast

    &:not(&--active):hover
      color $color-contentheader-link-hover

    &--active
      color $color-contentheader-link-current

  &__option + &__option
    margin-left $space-l

  &__actions
    margin-bottom $space-xxs

  &__actiontoggle
    appearance none
    margin-left $space-xl
    transition-duration $transition-duration-fast
    color $color-contentheader-link
    background transparent
    cursor pointer
    icon-size(.875)

    &:hover
      .icon
        fill $color-contentheader-link-hover

    .icon
      transition-duration $transition-duration-fast
      fill $color-contentheader-link
      icon-size(.875)

  &__actionlist
    display none
    list-style none
    position absolute
    z-index 10
    top 2.3125rem
    right 0
    width 280px
    border 1px solid $color-border-light
    border-top none

    &--active
      display block

  &__actionlink
    modal-option()

