.component
  &__section
    display none

    &--active
      display block

.componentheader
  &__links
    @media $mq-up_to_m
      flex-basis 100%
      font-size $font-size-subhead
    @media $mq-m_and_up
      font-size $font-size-large

      .pageheader__title + &
        margin-left $space-large
        padding-left $space-large

        &:before
          content ""
          position relative
          left $space-large * -1
          border-left 1px solid $color-pagehead-meta

  &__link
    display inline-block
    padding-bottom $space-medium
    color $color-pagehead-link
    text-decoration none
    transition-property color
    transition-duration .2s

    &:hover
      color $color-pagehead-link-hover

    &--active
      color $color-pagehead-link-current
      background-image url(../svgs/triangle.svg)
      background-position 50% 100%
      background-repeat no-repeat
      background-size 1.25rem

  &__link + &__link
    margin-left $space-large
