mixin color(token)
  - const { name, description, value, variable, reference } = token
  - const { hex, hsl, rgb} = h.colorValues(value)
  dl.colorToken&attributes(attributes)
    .colorToken__info.colorToken__info--top.sob-m
      .colorToken__symbol
        .colorToken__swatch
          .colorToken__swatch__inner(style=`background-color:${rgb}`)
      .colorToken__title= name

    if description
      .colorToken__info
        dt.colorToken__label= h.t('token.description')
        dd.colorToken__value= description

    if variable
      .colorToken__info
        dt.colorToken__label= h.t('token.variable')
        dd.colorToken__value.colorToken__value--code= variable

    //- if this color references another color only display the reference, otherwise the values
    if reference
      .colorToken__info
        dt.colorToken__label= h.t('token.reference')
        dd.colorToken__value= reference
    else if value
      .colorToken__info
        dt.colorToken__label HEX
        dd.colorToken__value.colorToken__value--code= hex
      .colorToken__info
        dt.colorToken__label RGB
        dd.colorToken__value.colorToken__value--code= rgb
      .colorToken__info
        dt.colorToken__label HSL
        dd.colorToken__value.colorToken__value--code= hsl
