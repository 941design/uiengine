.main-nav
  overflow hidden
  color $color-white
  background $color-brand-seco
  border-bottom 2px solid $color-gray-20

  @media $mq-up_to_XS
    font-size $font-size-small
  @media $mq-XS_and_up
    font-size $font-size-base

  .wrap
    display flex
    flex-flow row
    justify-content space-between

  &__tree
    display flex
    list-style none
    margin-left $space-large * -1

  &__item
    border-bottom 3px solid transparent
    font-weight 400

    &--active,
    &--current
      color $color-dark-bg
      background $color-white

    &:not(&--active)
      &:hover
        background $color-dark-bg
        border-bottom 3px solid $color-white

  &__link
    display block
    color inherit
    text-decoration none
    padding $space-normal $space-large

  &__config
    order 2
    margin-right $space-large * -1
    display block
    color $color-lightred
    text-decoration none
    padding $space-normal $space-large
    white-space nowrap
