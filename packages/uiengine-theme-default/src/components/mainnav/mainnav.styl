.main-nav
  overflow hidden
  color $color-main-nav-text
  background $color-main-nav-bg

  @media $mq-up_to_XS
    font-size $font-size-small
  @media $mq-XS_and_up
    font-size $font-size-base

  .wrap
    display flex
    flex-flow row
    justify-content space-between

  &__tree
    display flex
    list-style none
    margin-left $space-large * -1

  &__item
    border-bottom 3px solid $color-main-nav-border
    font-weight 400

    &--active,
    &--current
      color $color-main-nav-text-active
      background $color-main-nav-bg-active

    &:not(&--active)
      &:hover
        color $color-main-nav-text-active
        background $color-main-nav-bg-active
        border-bottom 3px solid $color-main-nav-border-active

  &__link
    display block
    color inherit
    text-decoration none
    padding $space-normal $space-large

  &__config
    order 2
    margin-right $space-large * -1
    display block
    color $color-main-nav-text-config
    text-decoration none
    padding $space-normal $space-large
    white-space nowrap
