.variationpreview
  position relative
  margin-top $space-medium

  &__container
    min-width 250px
    resize horizontal
    overflow scroll
    margin 0 auto
    text-align center
    // leave space for the resize handle
    padding-bottom $space-normal

    &[data-breakpoint]
      transition-property width
      transition-duration .25s
      transition-timing-function ease-out

  &__size
    height .8125rem
    margin-bottom 1.25rem
    border-bottom 1px solid $color-neutral-20
    position relative

    &:before
    &:after
      height 13px
      position absolute
      top 50%
      content ''

    &:before
      left 0
      border-left 1px solid $color-modal-border

    &:after
      right 0
      border-right 1px solid $color-modal-border

  &__sizer
    padding-left $space-normal
    padding-right $space-normal
    color $color-modal-text
    background $color-main-bg
    display inline-block
    font-size $font-size-base
    font-family $font-family-base
    cursor pointer

  &__iframe
    display block
    width 100%
    border 0

  &__breakpoints
    position absolute
    z-index 5
    top $space-normal
    left calc(50% - 5rem)
    width 10rem
    max-height 0
    transition-property max-height
    transition-duration .15s
    transition-timing-function ease-out
    overflow hidden

    &--active
      max-height 20rem
      transition-timing-function ease-in

  &__breakpoints-inner
    border 1px solid $color-modal-border
    border-top none
    padding-top $space-normal

  &__breakpoint
    display block
    width 100%
    border-top 1px solid $color-modal-border
    font-size $font-size-small
    font-family $font-family-base
    color $color-modal-text
    text-align center
    background $color-modal-bg
    cursor pointer
    padding-top $space-small
    padding-bottom $space-small
    padding-left $space-normal
    padding-right $space-normal
    &:first-child
      margin-top .525rem
    &:last-child
      padding-bottom $space-normal
    &:hover
      color $color-modal-text-hover
      background $color-modal-bg-hover

