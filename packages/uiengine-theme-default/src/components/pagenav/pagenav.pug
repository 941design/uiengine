mixin pageNav(itemIds, navigation)
  if itemIds
    nav.page-nav
      ul.page-nav__tree
        for itemId in itemIds
          +pageNavItem(itemId)

mixin pageNavItem(itemId)
  if item = navigation[itemId]
    - const classList = []
    - item.childIds.length ? classList.push('page-nav__item--children') : false
    - h.isCurrentPage(item) ? classList.push('page-nav__item--current') : false
    - h.isActivePage(item) ? classList.push('page-nav__item--active') : false
    - const classes = classList.join(' ')
    li.page-nav__item(class=classes)
      a(class="page-nav__link" href=h.pageLink(item))= item.title
