.variationcode
  &__header
    display flex
    margin-top $space-large
    margin-bottom $space-tiny

  &__toggle
    margin-left $space-small
    background none
    color $color-code-link
    cursor pointer

    .icon
      transition-property transform
      transition-duration .15s
      icon-color($color-code-link)
      icon-position(1px, -3px)

    &:hover
      color $color-code-link-hover

      .icon
        icon-color($color-code-link-hover)

    &--active
      .icon
        transform rotate(90deg)

  &__block:not(&__block--active)
    display none

  &__raw
  &__context
  &__rendered
    overflow-x auto
    padding $space-normal
    font-family $font-family-code
    font-size $font-size-small

  &__raw
    color $color-code-text
    background-color $color-code-bg

  &__context
    color $color-data-text
    background-color $color-data-bg

  &__rendered
    color $color-code-text
    background-color $color-code-bg


