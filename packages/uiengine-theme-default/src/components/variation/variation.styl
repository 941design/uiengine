.variation
  padding-bottom $space-large

  &__content
    margin-top $space-large
    margin-bottom $space-large

  &__links
    list-style none
    margin-top $space-large
    margin-bottom $space-large

  &__link
    text-decoration none
    font-size $font-size-tiny
    color $color-variationnav-link

    .icon
      margin-right $space-tiny
      icon-color($color-variationnav-link)
      icon-position(1px)

    &:hover
      color $color-variationnav-link-hover

      .icon
        icon-color($color-variationnav-link-hover)

  &__link + &__link
    margin-top $space-small

  &__section
    display none

    &--active
      display block
