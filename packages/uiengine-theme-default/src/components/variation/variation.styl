.variation
  padding-bottom $space-large

  &__content
    margin-top $space-large
    margin-bottom $space-medium
    markdown-container()

  &__links
    list-style none
    margin-top $space-large
    margin-bottom $space-large

  &__link
    font-size $font-size-tiny
    link-with-hover($color-variationnav-link, $color-variationnav-link-hover, false)
    
    .icon
      margin-right $space-tiny
      icon-position(1px)

  &__link + &__link
    margin-top $space-small

  &__section
    display none

    &--active
      display block
