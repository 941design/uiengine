.navigation
  overflow hidden
  color $color-navigation-text
  background $color-navigation-bg

  .wrap
    display flex
    flex-flow row
    justify-content space-between

  &__tree
    display flex
    list-style none
    margin-left $space-large * -1

  &__item
    font-weight 400

    &--active,
    &--current
      color $color-navigation-text-current
      background $color-navigation-bg-current

    &:not(&--active)
      &:hover
        color $color-navigation-text-hover
        background $color-navigation-bg-current

  &__link
    display block
    color inherit
    text-decoration none
    padding $space-normal $space-large

  &__config
    order 2
    margin-right $space-large * -1
    display block
    color $color-navigation-text-meta
    text-decoration none
    padding $space-normal $space-large
    white-space nowrap
