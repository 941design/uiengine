.navigation
  position relative
  color $color-navigation-text
  background $color-navigation-bg

  &--collapsed &__tree
    @media $mq-up_to_l
      display none

  &__home
    display block
    color inherit
    text-decoration none
    text-align center
    font-family $font-family-regular
    @media $mq-up_to_l
      padding $space-m $space-xxl
    @media $mq-l_and_up
      font-size $font-size-l
      margin-top $space-xxs
      padding $space-xxl $space-m

  &__tree
    list-style none

  &__item
    position relative

    &--level-0
      font-size $font-size-s

    @media $mq-l_and_up
      &:not(&--level-0)
        font-size $font-size-xs

  &__item--collapsed &__tree
    display none

  &__item--collapsed &__icon
    transform rotate(-90deg)

  &__menutoggle,
  &__itemtoggle
    appearance none
    cursor pointer
    background transparent
    position absolute

  &__menutoggle
    width 40px
    height 40px
    padding 8px
    @media $mq-up_to_m
      top 1px
    @media $mq-m_to_l
      top 3px
    @media $mq-l_and_up
      display none

  &__itemtoggle
    width 36px
    height 36px
    padding 6px
    @media $mq-up_to_m
      top 2px
    @media $mq-m_to_l
      top 4px
    @media $mq-l_and_up
      top 0

    .navigation__icon
      icon-size(.75)

    .navigation__item--level-0 &,
    .navigation__item--level-1 &
      left $space-s

    .navigation__item--level-2 &,
    .navigation__item--level-3 &,
    .navigation__item--level-4 &,
    .navigation__item--level-5 &
      left $space-s + $space-xl

  &__icon
    icon-size(1)
    fill $color-navigation-text
    transition-property transform
    transition-duration $transition-duration-fast

  &__link
    display block
    color inherit
    text-decoration none
    border-left $space-xs solid transparent
    padding-right $space-m
    @media $mq-up_to_l
      padding-top $space-m
      padding-bottom $space-m
    @media $mq-l_and_up
      padding-top $space-s
      padding-bottom $space-s

    .navigation__item--level-0 &
      padding-left $space-xxl
      color $color-navigation-text
      background-color $color-navigation-bg

    .navigation__item--level-1 &
      padding-left $space-xxl
      color $color-navigation-text-subnav
      background-color $color-navigation-bg-subnav

    .navigation__item--level-2 &,
    .navigation__item--level-3 &,
    .navigation__item--level-4 &,
    .navigation__item--level-5 &
      padding-left $space-xxl + $space-xl
      color $color-navigation-text-subnav
      background-color $color-navigation-bg-subnav

  &__item--current > &__link
    font-family $font-family-bold
    color $color-navigation-text-current !important
    background-color $color-navigation-bg-current !important
    border-left-color $color-navigation-border-current

  &__item--current > &__itemtoggle &__icon
    fill $color-navigation-text-current !important
