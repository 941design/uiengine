mixin variationHeader(variation)
  header.variation-header
    - const component = components[variation.componentId]
    h2
      span= component.title
      span= variation.title
    +variationHeaderItems(variation)

mixin variationHeaderItems(variation)
  nav.variation-header__items
    if variation.content
      +variationHeaderItem(`${variation.id}-info`, 'Infos')
    if variation.raw || variation.context
      +variationHeaderItem(`${variation.id}-code`, 'Code')
    if variation.rendered
      +variationHeaderItem(`${variation.id}-preview`, 'Vorschau')

mixin variationHeaderItem(id, title)
  a.variation-header__link(href=`#${id}`)= title
