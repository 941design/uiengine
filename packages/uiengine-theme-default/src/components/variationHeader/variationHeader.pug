mixin variationHeader(variation)
  - const idPrefix = h.dasherize(variation.id)
  - const component = components[variation.componentId]
  header.variation-header&attributes(attributes)
    .wrap.wrap--content
      span.variation-header__description= h.t('Variation')

      h2.variation-header__title
        span.variation-header__variation-title= variation.title

      nav.variation-header__links
        if variation.rendered
          +variationHeaderLink(`${idPrefix}-preview`, 'Vorschau', true)
        if variation.raw || variation.context || variation.rendered
          +variationHeaderLink(`${idPrefix}-code`, 'Code', !variation.rendered)

mixin variationHeaderLink(id, title, active)
  - const classes = active ? 'variation-header__link--active' : null
  a.variation-header__link(href=`#${id}` class=classes)= title
