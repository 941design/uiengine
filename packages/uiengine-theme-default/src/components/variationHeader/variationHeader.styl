.variation-header
  color $color-white
  background-color $color-variation-head-bg
  padding-top $space-large
  padding-bottom $space-large

  .wrap
    display flex
    align-items baseline

  &__description
    @media up_to_L
      display none
    @media L_and_up
      text-decoration none
      font-size $font-size-tiny
      color $color-variation-head-meta
      text-align right
      width 6rem
      margin-left -6rem
      padding-right $space-large

  &__title
    font-size 1.5rem

  &__component-title
    &:after
      content " > "

  &__links
    margin-left $space-large
    border-left 1px solid $color-variation-head-meta
    padding-left $space-large
    font-size 1.5rem

  &__link
    text-decoration none
    color $color-variation-head-link

    &--active
      color $color-variation-head-link-active
      // TODO: Add triangle highlight

  &__link + &__link
    margin-left $space-large

