.schema
  width 100%

  &__title
    font-family $font-family-regular
    font-size $font-size-m
    text-align left
    margin-bottom $space-s

  &__propertyname
    width 10em

  &__propertytype
    width 6em

  &__propertydescription
    width auto

  &__propertyname,
  &__propertytype,
  &__propertydescription code,
  &__propertydefault,
  &__propertyrequired
    td&
      font-family $font-family-code

  &__propertyrequired
    width 4em
    th&,
    td&
      text-align center

  &__propertydefault
    width 6em
