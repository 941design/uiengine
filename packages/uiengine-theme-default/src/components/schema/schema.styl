.schema
  width 100%
  border-collapse collapse

  &__title
    font-family $font-family-regular
    font-size $font-size-m
    text-align left
    margin-bottom $space-s

  &__propertyname
  &__propertytype
  &__propertydescription
  &__propertydefault
  &__propertyrequired
    padding .25rem .5rem

    th&
      color $color-secondary-text
      text-align left
      border-bottom 1px solid $color-border-medium
      font-family $font-family-light
      font-size $font-size-xs
      font-weight normal

    td&
      border-bottom 1px solid $color-border-light
      font-size $font-size-s

  &__propertyname
    width 10em
    padding-left 0

  &__propertytype
    width 6em

  &__propertydescription
    width auto

  &__propertyname,
  &__propertytype,
  &__propertydescription code,
  &__propertydefault,
  &__propertyrequired
    td&
      font-family $font-family-code

  &__propertyrequired
    width 4em
    th&,
    td&
      text-align center

  &__propertydefault
    width 6em
    padding-right 0
