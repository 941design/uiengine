mixin schema(title, params)
  table.schema(id=h.dasherize(title))&attributes(attributes)
    caption.schema__title= title
    thead
      tr
        th.schema__propertyname= h.t('schema.property_name')
        th.schema__propertytype= h.t('schema.property_type')
        th.schema__propertydescription= h.t('schema.property_description')
        th.schema__propertyrequired= h.t('schema.property_required')
        th.schema__propertydefault= h.t('schema.property_default')
    tbody
      each param, paramId in params
        tr
          td.schema__propertyname= paramId
          td.schema__propertytype!= h.propertyType(param.type)
          td.schema__propertydescription!= param.description
          td.schema__propertyrequired= param.required ? '*' : ''
          td.schema__propertydefault= param.default
